{
  "info": {
    "name": "API Gestión de Cursos",
    "description": "Colección de endpoints para la API de gestión de cursos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registro - Instructor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan Instructor\",\n  \"email\": \"juan.instructor@example.com\",\n  \"password\": \"password123\",\n  \"rol\": \"instructor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Registro - Alumno",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"María Alumna\",\n  \"email\": \"maria.alumna@example.com\",\n  \"password\": \"password123\",\n  \"rol\": \"alumno\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"juan.instructor@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Obtener Perfil",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Listar Usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/usuarios",
              "host": ["{{base_url}}"],
              "path": ["usuarios"]
            }
          }
        },
        {
          "name": "Obtener Usuario por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/usuarios/1",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "1"]
            }
          }
        },
        {
          "name": "Actualizar Usuario",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan Instructor Actualizado\",\n  \"email\": \"juan.instructor@example.com\",\n  \"rol\": \"instructor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/usuarios/1",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "1"]
            }
          }
        },
        {
          "name": "Cambiar Contraseña",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"old_password\": \"password123\",\n  \"new_password\": \"newpassword456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/usuarios/change-password",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "change-password"]
            }
          }
        },
        {
          "name": "Eliminar Usuario",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/usuarios/1",
              "host": ["{{base_url}}"],
              "path": ["usuarios", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Cursos",
      "item": [
        {
          "name": "Crear Curso",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Desarrollo Web con Go\",\n  \"descripcion\": \"Aprende a crear aplicaciones web modernas con Go\",\n  \"duracion_horas\": 40,\n  \"instructor_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/cursos",
              "host": ["{{base_url}}"],
              "path": ["cursos"]
            }
          }
        },
        {
          "name": "Listar Cursos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cursos",
              "host": ["{{base_url}}"],
              "path": ["cursos"]
            }
          }
        },
        {
          "name": "Mis Cursos (Instructor)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cursos/my-cursos",
              "host": ["{{base_url}}"],
              "path": ["cursos", "my-cursos"]
            }
          }
        },
        {
          "name": "Obtener Curso por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cursos/1",
              "host": ["{{base_url}}"],
              "path": ["cursos", "1"]
            }
          }
        },
        {
          "name": "Actualizar Curso",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Desarrollo Web Avanzado con Go\",\n  \"descripcion\": \"Aprende técnicas avanzadas de desarrollo web con Go\",\n  \"duracion_horas\": 50,\n  \"instructor_id\": 1,\n  \"activo\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/cursos/1",
              "host": ["{{base_url}}"],
              "path": ["cursos", "1"]
            }
          }
        },
        {
          "name": "Activar/Desactivar Curso",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cursos/1/toggle-activo",
              "host": ["{{base_url}}"],
              "path": ["cursos", "1", "toggle-activo"]
            }
          }
        },
        {
          "name": "Eliminar Curso",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cursos/1",
              "host": ["{{base_url}}"],
              "path": ["cursos", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["health"]
        }
      }
    }
  ]
}
